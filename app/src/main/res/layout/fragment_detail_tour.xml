<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allytours.controller.fragment.DetailTourFragment">

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/ll_detail_tour_button_container"
        >

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/pad_5dp">


                <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="200dp">
                    <com.allytours.widget.HorizontalListView
                        android:id="@+id/hlv_dt"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:divider="#ed3a24"
                        android:fadingEdgeLength="5dp"
                        android:requiresFadingEdge="horizontal"
                        />

                </RelativeLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark"
                    android:layout_marginLeft="@dimen/pad_10dp"
                    android:layout_marginRight="@dimen/pad_10dp"
                    android:layout_marginTop="@dimen/pad_5dp"/>

                <!--operator name-->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/pad_10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text="Operated by : "/>
                    <TextView
                        android:id="@+id/tv_dt_operator_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:text=""
                        android:textStyle="bold"
                        android:singleLine="true"/>
                </LinearLayout>
                <!--language, type, private-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:orientation="horizontal"
                    android:paddingRight="@dimen/pad_10dp"
                    android:paddingLeft="@dimen/pad_10dp"
                    android:paddingTop="@dimen/pad_5dp"
                    android:weightSum="5">

                    <LinearLayout
                        android:id="@+id/ll_it_flagcontainer"
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_weight="1.1">

                        <ImageView
                            android:id="@+id/iv_dt_fg_e"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_british"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_dt_fg_s"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_spanish"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_dt_fg_f"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_french"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_dt_fg_p"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_portuguese"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_dt_fg_c"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_china"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_dt_fg_g"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_german"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>

                        <ImageView
                            android:id="@+id/iv_dt_fg_j"
                            android:layout_width="23dp"
                            android:layout_height="15dp"
                            android:src="@drawable/fg_japan"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>


                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/pad_10dp"
                        android:gravity="center_vertical"
                        android:layout_weight="1.9">
                        <ImageView
                            android:id="@+id/iv_dt_romentic"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/romantic24"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_dt_sightseeing"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/sightseeing24"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>
                        <ImageView
                            android:id="@+id/iv_dt_adventure"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/adventure24"
                            android:layout_marginRight="3dp"
                            android:visibility="gone"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="fill_parent"
                        android:orientation="horizontal"
                        android:layout_marginLeft="@dimen/pad_20dp"
                        android:gravity="center_vertical"
                        android:layout_weight="2">
                        <ImageView
                            android:id="@+id/iv_dt_private"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/bus24"
                            />
                    </LinearLayout>
                </LinearLayout>
                <!--duration and review-->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:padding="@dimen/pad_10dp">
                    <!--duration-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_alignParentLeft="true"

                        >

                        <TextView
                            android:id="@+id/tv_dt_duration_hours"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0"
                            android:layout_marginLeft="@dimen/pad_15dp"
                            android:textColor="@color/black"/>

                        <TextView
                            android:id="@+id/tv_dt_duration_days"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="hours"
                            android:layout_marginLeft="@dimen/pad_15dp"
                            android:textColor="@color/black"/>


                    </LinearLayout>
                    <!--review-->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_alignParentRight="true">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/iv_dt_mark"
                                android:layout_width="20dp"
                                android:layout_height="20dp"
                                android:src="@drawable/smile5"/>
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_dt_review_count"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0 reviews"
                            android:textColor="@color/black"
                            android:layout_marginLeft="@dimen/pad_10dp"/>
                    </LinearLayout>
                </RelativeLayout>

                <!--start time-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"

                    android:padding="@dimen/pad_10dp">

                    <LinearLayout
                        android:id="@+id/ll_dt_start_time_container"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                    </LinearLayout>


                </LinearLayout>
                <TextView
                    android:layout_width="fill_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/dark"/>
            </LinearLayout>
            <!--attraction-->
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="2"
                android:padding="@dimen/pad_10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Attractions"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_20sp"/>
                    <TextView
                        android:id="@+id/tv_dt_attraction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/txt_13sp"
                        android:layout_marginTop="@dimen/pad_10dp"
                        android:paddingLeft="@dimen/pad_10dp"
                        android:paddingRight="@dimen/pad_10dp"
                        android:text="-----------\n-------------"
                        />
                </LinearLayout>


            </LinearLayout>
            <!--inclustion-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_10dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Inclusions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/txt_20sp"/>
                <LinearLayout
                    android:id="@+id/ll_dt_taxes"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical">
                        <ImageView
                            android:id="@+id/iv_dt_taxes"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Taxes"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_tips"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_tips"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Tips"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_roundtrip"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_roundtrip"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Round Trip Transfer"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_dt_specified_city"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:layout_marginLeft="40dp"
                        android:visibility="gone"/>
                    <LinearLayout
                        android:id="@+id/ll_dt_breakfast"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_breakfast"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Breakfast"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_lunch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_lunch"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView

                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Lunch"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_dinner"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_dinner"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Dinener"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_equipment_rental"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_equipment_rental"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Equipment Rental"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_entrance_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_enterance_fee"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Enterance Fee"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_mandatory_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_other_fee"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Other Mandatory Fee"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <LinearLayout
                        android:id="@+id/ll_dt_other"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/pad_5dp"
                        android:gravity="center_vertical"
                        android:visibility="gone">
                        <ImageView
                            android:id="@+id/iv_dt_other"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/green_check"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/pad_10dp"
                            android:textSize="@dimen/txt_13sp"
                            android:text="Other"
                            android:textColor="@color/black"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_dt_notes"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:textSize="@dimen/txt_13sp"
                        android:hint=""
                        android:visibility="gone"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>
    <!--button-->
    <LinearLayout
        android:id="@+id/ll_detail_tour_button_container"
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:weightSum="2"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/pad_5dp">
            <Button
                android:id="@+id/btn_query_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Query ?"
                android:textColor="@color/blue"
                android:background="@color/transparent"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="@dimen/pad_5dp">
            <Button
                android:id="@+id/btn_buy_detail"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Buy"
                android:textColor="@color/blue"
                android:background="@color/transparent"/>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
