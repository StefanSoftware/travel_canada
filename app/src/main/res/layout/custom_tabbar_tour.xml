<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="@dimen/tabbar_hegit"
        android:orientation="horizontal"
        android:weightSum="4"
        android:background="@color/colorPrimaryLight">

        <Button
            android:id="@+id/btn_tours_popular"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Popular"
            android:background="@color/colorPrimary"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12sp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/btn_tours_sightseeing"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="SightSeeing"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12sp"
            android:layout_weight="1"/>

        <Button
            android:id="@+id/btn_tours_romantic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Romantic"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12sp"
            android:layout_weight="1"/>


        <Button
            android:id="@+id/btn_tours_adventure"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Adventure"
            android:background="@color/transparent"
            android:textColor="@color/white"
            android:textSize="@dimen/txt_12sp"
            android:layout_weight="1"/>

    </LinearLayout>
</LinearLayout>
