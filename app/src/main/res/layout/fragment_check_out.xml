<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.allytours.view.fragment.customer.CheckOutFragment">


    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical"
            android:padding="@dimen/pad_5dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="5">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">
                        <TextView
                            android:id="@+id/tv_checkout_tourname"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tour name"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"/>
                        <ImageView
                            android:id="@+id/iv_checkout_flag"
                            android:layout_marginLeft="@dimen/pad_15dp"
                            android:layout_width="25dp"
                            android:layout_height="25dp"
                            android:src="@drawable/canada"/>
                    </LinearLayout>
                    <TextView
                        android:id="@+id/tv_checkout_adults"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 Adults"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_marginTop="@dimen/pad_10dp"
                        android:layout_marginLeft="@dimen/pad_10dp"/>
                    <TextView
                        android:id="@+id/tv_checkout_children"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="100 Children"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_marginTop="@dimen/pad_10dp"
                        android:layout_marginLeft="@dimen/pad_10dp"/>
                    <TextView
                        android:id="@+id/tv_checkout_date"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DEC 10, 2016, 5 PM"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_14sp"
                        android:layout_marginTop="@dimen/pad_10dp"
                        android:layout_marginLeft="@dimen/pad_10dp"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/pad_10dp"
                        android:layout_marginLeft="@dimen/pad_10dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Up : "
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_14sp"/>
                        <TextView
                            android:id="@+id/tv_checkout_pickup"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Pick Up"
                            android:textColor="@color/black"
                            android:textSize="@dimen/txt_13sp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="4"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/pad_10dp">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Total"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_16sp"/>
                    <TextView
                        android:id="@+id/tv_checkout_total_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$ 25000"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_13sp"
                        android:layout_marginTop="@dimen/pad_5dp"
                        />
                    <TextView
                        android:id="@+id/tv_checkout_currency_unit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="CAD"
                        android:textColor="@color/black"
                        android:textSize="@dimen/txt_13sp"
                        android:layout_marginTop="@dimen/pad_5dp"/>
                    </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
                android:layout_marginTop="@dimen/pad_5dp"/>
            

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/pad_5dp"
                android:layout_marginTop="@dimen/pad_10dp"
                android:background="@drawable/round_corner_gray">

                <Button
                    android:id="@+id/btn_checkout_pay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:text="Pay"
                    android:inputType="phone"
                    android:textColor="@color/blue"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</FrameLayout>
